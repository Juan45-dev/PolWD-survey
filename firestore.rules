rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Public should never read responses directly.
    match /responses/{docId} {
      allow read, write: if false;
    }

    match /duplicateAttempts/{docId} {
      allow read, write: if false;
    }

    // Allow admins to manage the active survey configuration.
    match /surveyConfig/{docId} {
      allow read, write: if isAdmin();
    }

    // Admin allowlist docs (managed via console). Admin can read their own.
    match /admins/{uid} {
      allow read: if isAdmin() && request.auth.uid == uid;
      allow write: if false;
    }

    // Default deny.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
